<div class="container">
  <main class="pt-3 pb-5" role="main">
    <h2>コーチ登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, class: "form-control", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "変更しない場合は記入しなくてOK" %>
          <% if @minimum_password_length %>
            <small><%= @minimum_password_length %> characters minimum</small>
          <% end %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :password_confirmation, "確認用パスワード" %><br />
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>

    <% end %>
  </main>
</div>
