<!DOCTYPE html>
<html>
  <head>
    <title>はぐくむコーチ MATCH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_pack_tag 'application' %>
    <%#= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  <header class="navbar navbar-expand-lg navbar-light text-right bg-primary">

    <%= link_to "はぐくむコーチ MATCH", root_path, class: "text-white" %>

    <% if coach_signed_in? %>
      <ul class="navbar-nav flex-row ml-md-auto d-md-flex collapse" id="navbarToggleExternalContent">
        <li class="nav-item mr-2"><%= link_to "プロフィール編集", edit_coach_registration_path, class: "text-white" %></li>
        <li class="nav-item"><%= link_to "ログアウト", logout_path, class: "text-white" %></li>
      </ul>
      <button class="navbar-toggler bg-white" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <% else %>
      <ul class="navbar-nav flex-row ml-md-auto d-md-flex collapse" id="navbarToggleExternalContent">
        <li class="nav-item mr-2"><%= link_to "コーチ登録", new_coach_registration_path, class: "text-white" %></li>
      </ul>
      <button class="navbar-toggler bg-white" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <% end %>

  </header>
    <%= yield %>
  </body>
</html>
